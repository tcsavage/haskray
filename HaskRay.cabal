name:                HaskRay

-- The package version.  See the Haskell package versioning policy (PVP)
-- PVP summary:      +-+------- breaking API changes
--                   | | +----- non-breaking API additions
--                   | | | +--- code changes with no API change
version:             0.1.0.0

author:              Tom Savage
maintainer:          cam01005@port.ac.uk
category:            Graphics
build-type:          Simple
cabal-version:       >=1.8

flag buildfrontend
  description:         Build the front-end as well as the library
  default:             True

library
  exposed-modules:
    HaskRay
    HaskRay.Geometry
  other-modules:
    HaskRay.Geometry.BoundingBox
    HaskRay.Geometry.Classes
    HaskRay.Geometry.Mesh
    HaskRay.Geometry.Object
    HaskRay.Geometry.Plane
    HaskRay.Geometry.Ray
    HaskRay.Geometry.Sphere
    HaskRay.Geometry.Util
    HaskRay.Light
    HaskRay.Material
    HaskRay.Monad
    HaskRay.Octree
    HaskRay.Parser
    HaskRay.Projection
    HaskRay.RayTree
    HaskRay.RayTree.String
    HaskRay.Scene
    HaskRay.Settings
    HaskRay.Vector
    HaskRay.Vector.Simple
    HaskRay.Vector.Mid
    HaskRay.Vector.Advanced
  build-depends:       base ==4.5.*, bytestring ==0.9.*, split ==0.1.*, parallel ==3.2.*, random, mtl, MonadRandom, containers
  hs-source-dirs:      src

executable HaskRay
  main-is:             Main.hs
  other-modules:       GLDisplay, GLDisplay.Display, GLDisplay.Input, GLDisplay.Renderable GLDisplay.Util, GLDisplay.UI, Settings
  build-depends:
    base ==4.5.*,
    HaskRay,
    awesomium,
    mtl,
    bytestring ==0.9.*,
    split ==0.1.*,
    parallel ==3.2.*,
    random,
    MonadRandom,
    containers,
    GLUT >= 2.3,
    OpenGL >=2.6,
    async,
    graphviz,
    Tensor

--  if flag(buildfrontend)
--    build-depends:       base ==4.5.*, HaskRay, bytestring ==0.9.*, split ==0.1.*, parallel ==3.2.*, random, MonadRandom, containers, GLUT, OpenGL, async, graphviz, Tensor
--  else
--    buildable:           False
  hs-source-dirs:      src
  ghc-options:         -threaded -eventlog -rtsopts -O2

test-suite properties
  type: exitcode-stdio-1.0
  main-is: properties.hs
  build-depends: base, QuickCheck
  hs-source-dirs: testsuite, src
